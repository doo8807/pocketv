    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.doo88.pocketv.record">


    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
